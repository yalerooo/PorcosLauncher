{
  "name": "porcos-launcher",
  "version": "1.4.0",
  "main": "src/main.js",
  "description": "Minecraft Launcher for Porcos Server",
  "author": "Porcos Team",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.porcos.launcher",
    "productName": "PorcosLauncher",
    "win": {
      "target": "nsis",
      "icon": "resources/ico.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "Game",
      "executableName": "PorcosLauncher",
      "maintainer": "Porcos Team",
      "desktop": {
        "Name": "PorcosLauncher",
        "Comment": "Minecraft Launcher for Porcos Server",
        "Categories": "Game;Utility"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/ico.ico",
      "language": "1033"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "adm-zip": "^0.5.16",
    "cheerio": "^1.0.0",
    "drive-mediafire-downloader": "^1.0.0",
    "electron-store": "^10.0.1",
    "fabric": "^6.6.1",
    "forge": "^2.3.0",
    "jsdom": "^26.0.0",
    "minecraft-launcher-core": "^3.18.2",
    "node-unrar-js": "^2.0.2",
    "quilt": "^0.1.3",
    "sharp": "^0.33.5",
    "tar": "^7.4.3",
    "tomate-loaders": "^2.0.2",
    "unzipper": "^0.12.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
